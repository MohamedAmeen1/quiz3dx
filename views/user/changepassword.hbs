<form action="/user/changepassword" method="POST" >
     <div class="form-group">
        <label> New Password</label>
        <input minlength="3" required type="password" class="form-control" name="password" placeholder="password" value="{{user.password}}">     
        <input  type="text" class="form-control" name="token" placeholder="password" value="{{id}}" hidden> 
    </div> 
    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa"></i>Confirm Change</button>
    </div>
    <br>
</form>