<form action="/user/addnewquestion" method="POST" >
    <div class="form-group">
        <input type="text" class="form-control" name="id" placeholder="Quiz Name" value="{{quiz.id}}" hidden>
    </div>
  <label class="text-light">Question Name</label><input name="title" class="form-control">
    <div class="row">
       <label class="text-light">answer 1</label><input name="a1" class="form-control col-4" type="text"><input class="form-control col-1"   type="radio" value="1" name="correct">
       </div>
       <div class="row">
       <label class="text-light">answer 2</label><input name="a2" class="form-control col-4" type="text"><input class="form-control col-1"   type="radio" value="2" name="correct">
       </div>
       <div class="row">
       <label class="text-light">answer 3</label><input name="a3" class="form-control col-4" type="text"><input class="form-control col-1"  type="radio" value="3" name="correct">
       </div>
    <label class="text-light">Explanation</label><textarea name="explanation" class="form-control" rows="4"></textarea>
  
    <div class="form-group">
        <button type="submit" class="btn btn-primary "><i class="fa"></i> Submit this question</button>
                <a  class="btn btn-danger" href="wellcome"><i class="fa"></i>Finish this Quiz</a>

    </div>
</form>