<form action="/user/editquestion" method="POST" >
    <div class="form-group">
        <label class="text-light">Quiz Name</label>
        <input type="text" class="form-control" name="name" placeholder="Quiz Name" value="{{quiz.name}}">  
        <input type="text" class="form-control" name="id" placeholder="Quiz Name" value="{{quiz.id}}" hidden>
    </div>
    <label class="text-light">Question Name</label><input name="title" class="form-control" value="{{quiz.title}}">
    <input type="text" class="form-control" name="qid" placeholder="Quiz Name" value="{{quiz.qid}}" hidden>
    <div class="row" >
       <label class="text-light">answer 1</label><input name="a1" class="form-control col-4" type="text" value="{{quiz.a1}}">
       </div>
       <div class="row">
       <label class="text-light">answer 2</label><input name="a2" class="form-control col-4" type="text" value="{{quiz.a2}}">
       </div>
       <div class="row">
       <label class="text-light">answer 3</label><input name="a3" class="form-control col-4" type="text" value="{{quiz.a3}}">
       </div>
       <div>
       <label class="text-light">Correct answer :</label>
        <select name="correct" > 
            <option id="1" value="1" >1</option>
            <option id="2" value="2">2</option>
            <option id="3" value="3">3</option>
        </select>
        </div>
    <label class="text-light">Explanation</label><textarea name="explanation" class="form-control" rows="4" >{{quiz.explanation}}</textarea>
  
    <div class="form-group">
        <button type="submit" class="btn btn-primary "><i class="fa"></i> Submit this Edit</button>
                <a  class="btn btn-danger" href="wellcome"><i class="fa"></i>Finish this Quiz</a>

    </div>
</form>
<script>
    document.getElementById("{{quiz.correct}}").selected=true;
</script>